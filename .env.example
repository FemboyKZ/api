# KZ Global Ban Cleanup Service
KZ_BAN_CLEANUP_INTERVAL=3600000  # 1 hour (in milliseconds)
KZ_BAN_CLEANUP_ENABLED=true

# KZ Stats Update Interval
KZ_STATS_INTERVAL=21600000 # 6 hours (in milliseconds)

# Steam API Configuration
# https://steamcommunity.com/dev/apikey
STEAM_API_KEY=your_steam_api_key_here

# CS2KZ API
CS2KZ_API_URL=https://api.cs2kz.org

# GOKZ API (CS:GO KZ Map Database)
GOKZ_API_URL=https://kztimerglobal.com/api/v2

# KZ Records Scraper Configuration (optional)
# GlobalKZ API Rate Limit: 500 requests per 5 minutes per IP
# This integrated scraper is for maintenance mode (keeping records up-to-date).
# For bulk scraping with proxy support, use scripts/standalone-scraper.js
# 
# Set to 'false' to disable the scraper
# KZ_SCRAPER_ENABLED=true
# How often to check for new records (in milliseconds) - default 3750ms (3.75s) for 80% rate limit
# KZ_SCRAPER_INTERVAL=3750
# Number of records to fetch per batch - default 5 (400 requests/5min = 80% utilization)
# KZ_SCRAPER_CONCURRENCY=5
# Delay between API requests in milliseconds - default 100ms
# KZ_SCRAPER_REQUEST_DELAY=100
# How often to check for new bans (in milliseconds) - default 300000ms (5 minutes)
# KZ_SCRAPER_BANS_INTERVAL=300000
# Delay when caught up with records (in milliseconds) - default 30000ms (30s)
# KZ_SCRAPER_IDLE_INTERVAL=30000
# Proxies to use for scraping (comma-separated list)
# KZ_SCRAPER_PROXIES=http://username:password@proxy1:port,http://username:password@proxy2:port

# Server Configuration
PORT=3000
# HOST=127.0.0.1  # Uncomment when using reverse proxy (nginx/apache) to bind only to localhost

# Redis Configuration (optional)
# Set to 'true' to enable caching with Redis
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password
# REDIS_DB=0

# CORS Configuration (optional)
# Comma-separated list of allowed origins, or * for all
# CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Rate Limiting (optional)
# Maximum requests per 15-minute window per IP
# RATE_LIMIT_MAX=100

# Discord Webhook Configuration (optional)
# Set to 'true' to enable Discord status updates
DISCORD_WEBHOOK_ENABLED=false
# Separate webhooks for CS:GO and CS2 servers
# Get webhook URLs from Discord: Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_CSGO=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
DISCORD_WEBHOOK_CS2=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Environment (optional)
# Set to 'production' for optimized logging (errors only to console, info/debug to files)
# Set to 'development' for verbose console logging with colors
NODE_ENV=production
