# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=csmonitor

# KZ Records Database
KZ_DB_HOST=127.0.0.1
KZ_DB_PORT=3306
KZ_DB_USER=root
KZ_DB_PASSWORD=testpassword
KZ_DB_NAME=kz_records_test

# Steam API Configuration
# https://steamcommunity.com/dev/apikey
STEAM_API_KEY=your_steam_api_key_here

# CS2KZ API
CS2KZ_API_URL=https://api.cs2kz.org

# GOKZ API (CS:GO KZ Map Database)
GOKZ_API_URL=https://kztimerglobal.com/api/v2

# KZ Records Scraper Configuration (optional)
# Set to 'false' to disable the scraper
# KZ_SCRAPER_ENABLED=true
# How often to check for new records (in milliseconds)
# KZ_SCRAPER_INTERVAL=10000
# Number of records to fetch in parallel (lower = less API load, higher = faster but may hit rate limits)
# KZ_SCRAPER_CONCURRENCY=2
# Delay between API requests in milliseconds (helps avoid rate limiting)
# KZ_SCRAPER_REQUEST_DELAY=500

# Server Configuration
PORT=3000
# HOST=127.0.0.1  # Uncomment when using reverse proxy (nginx/apache) to bind only to localhost

# Redis Configuration (optional)
# Set to 'true' to enable caching with Redis
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password
# REDIS_DB=0

# CORS Configuration (optional)
# Comma-separated list of allowed origins, or * for all
# CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Rate Limiting (optional)
# Maximum requests per 15-minute window per IP
# RATE_LIMIT_MAX=100

# Environment (optional)
# Set to 'production' for optimized logging (errors only to console, info/debug to files)
# Set to 'development' for verbose console logging with colors
NODE_ENV=production
